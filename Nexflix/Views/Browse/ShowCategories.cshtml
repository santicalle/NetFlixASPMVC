@model IEnumerable<Nexflix.Models.Category>

@{
    ViewBag.Title = "ShowCategories";
}

<h2>Selecciona una categoria:</h2>

<table class="table">
    <tr>
        <th>
            Categoria
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "GetMoviesByCategory", new { id = item.Id })
        </td>
    </tr>
}

</table>
